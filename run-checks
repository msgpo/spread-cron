#!/bin/sh

snap install --classic google-cloud-sdk
gcloud auth activate-service-account --key-file=sa.json

wget -q "https://cloud-images.ubuntu.com/xenial/current/xenial-server-cloudimg-amd64-disk1.img"
gsutil cp xenial-server-cloudimg-amd64-disk1.img gs://spread-snapd-tests/images/

wget -q "https://cloud-images.ubuntu.com/bionic/current/bionic-server-cloudimg-amd64.img"
gsutil cp bionic-server-cloudimg-amd64.img gs://spread-snapd-tests/images/

wget -q "https://cloud-images.ubuntu.com/eoan/current/eoan-server-cloudimg-amd64.img"
gsutil cp eoan-server-cloudimg-amd64.img gs://spread-snapd-tests/images/

wget -q "https://cloud-images.ubuntu.com/focal/current/focal-server-cloudimg-amd64.img"
gsutil cp focal-server-cloudimg-amd64.img gs://spread-snapd-tests/images/
